[
  {
    "name": "theme_info",
    "theme_name": "Themekit template theme",
    "theme_version": "1.0.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https:\/\/github.com\/Shopify\/themekit",
    "theme_support_url": "https:\/\/github.com\/Shopify\/themekit\/issues"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 100,
        "unit": "px",
        "label": "Logo Width"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image"
      }
    ]
  },
  {
    "name": "Color",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#FFFFFF"
          },
          {
            "type": "color_background",
            "id": "background_gradient",
            "label": "Background Gradient"
          },
          {
            "type": "color",
            "id": "text",
            "label": "Main Text",
            "default": "#252525"
          },
          {
            "type": "color",
            "id": "secondary_text",
            "label": "Secondary Text",
            "default": "#000000"
          },
          {
            "type": "color",
            "id": "button",
            "label": "Button",
            "default": "#989898"
          },
          {
            "type": "color",
            "id": "button_label",
            "label": "Button Label",
            "default": "#F6F6F6"
          },
          {
            "type": "color",
            "id": "secondary_button_label",
            "label": "Secondary Button Label",
            "default": "#626262"
          },
          {
            "type": "color",
            "id": "secondary_button_bg",
            "label": "Secondary Button Background",
            "default": "#F3C449"
          },
          {
            "type": "color",
            "id": "danger",
            "label": "Danger Color",
            "default": "#EF3636"
          },
          {
            "type": "color",
            "id": "success",
            "label": "Success Color",
            "default": "#EF3636"
          }
        ],
        "role": {
          "text": "text",
          "background": {
            "solid": "background",
            "gradient": "background_gradient"
          },
          "links": "secondary_button_label",
          "icons": "text",
          "primary_button": "button",
          "on_primary_button": "button_label",
          "primary_button_border": "button",
          "secondary_button": "background",
          "on_secondary_button": "secondary_button_label",
          "secondary_button_border": "secondary_button_label"
        }
      }
    ]
  }
]